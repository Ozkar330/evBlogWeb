#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Check if there are any staged files
if git diff --cached --quiet; then
  echo "⚠️  No staged files found. Skipping pre-commit hooks."
  exit 0
fi

# Run lint-staged
npx lint-staged

# Run type checking
echo "🔎 Type checking..."
npm run type-check

echo "✅ Pre-commit checks passed!"
